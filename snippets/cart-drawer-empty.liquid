{% doc %}
  Cart Drawer Empty State Component

  Renders the empty cart state with login prompt and optional collection display.

  @example
  {% render 'cart-drawer-empty' %}
{% enddoc %}

<div class="rounded-3xl border border-dashed border-neutral-300 bg-white p-10 text-center space-y-4">
  <h2 class="text-2xl font-medium text-neutral-900">Your cart is empty</h2>
  <p class="text-neutral-600">Browse our collections and add something special.</p>
  <div data-rebuy-id="260261"></div>

  <a href="{{ routes.all_products_collection_url }}" class="button button-neutral w-full"> Continue shopping </a>

  {%- if shop.customer_accounts_enabled and customer == null -%}
    <div class="flex flex-row items-center w-full justify-center py-2 gap-2">
      <p class=" text-secondary">Have an account?</p>
      <a href="{{ routes.account_login_url }}" class="link underlined-link">Log in</a>
    </div>
  {%- endif -%}
</div>

<div class="flex-grow">
  <div data-rebuy-id="260261"></div>
</div>
