{% liquid
  assign section_id = section.settings.custom_id | default: section.id
%}

<section id="{{ section_id }}" class="retail-locations py-16">
  <div class="container mx-auto px-4">
    {% if section.settings.heading != blank %}
      <div class="max-w-4xl texs">
        <h2 class="text-3xl font-semibold tracking-tight text-slate-900">{{ section.settings.heading }}</h2>
        {% if section.settings.description != blank %}
          <p class="mt-3 text-base text-slate-600">{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.settings.show_large_retailers %}
      <div class="mt-12 grid gap-6 lg:grid-cols-3">
        {% for retailer in section.settings.retailers %}
          {% unless retailer.importance == 'large' %}
            {% continue %}
          {% endunless %}
          <a
            class="flex h-full flex-col rounded-[32px] bg-white p-12"
            href="{{ retailer.link2 }}"
            target="_blank"
            rel="noopener"
          >
            {% if retailer.logo %}
              {% assign retailer_alt = retailer.name | default: '' | escape %}
              <div class="aspect-[5/2] max-w-100 overflow-hidden rounded-[28px] ">
                {{
                  retailer.logo
                  | image_url: width: 900, height: 675, crop: 'center'
                  | image_tag: class: 'h-full w-full object-contain', alt: retailer_alt, loading: 'lazy'
                }}
              </div>
            {% else %}
              <div class="aspect-[4/3] w-full rounded-[28px] bg-slate-100"></div>
            {% endif %}

            <div class="mt-6">
              {% if retailer.name != blank %}
                <h3 class="text-xl font-semibold text-slate-900 text-center">{{ retailer.name }}</h3>
              {% endif %}
              {% if retailer.desc != blank %}
                <p class="mt-2 text-sm text-slate-600 text-center">{{ retailer.desc }}</p>
              {% endif %}
            </div>
          </a>
        {% endfor %}
      </div>
    {% endif %}

    <div class="mt-12 grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-5">
      {% for retailer in section.settings.retailers %}
        {% if retailer.importance == 'large' %}
          {% continue %}
        {% endif %}
        <a
          href="{{ retailer.link.url }}"
          target="_blank"
          rel="noopener"
          class="flex flex-col overflow-hidden rounded-2xl bg-white p-12 text-left"
        >
          {% if retailer.logo %}
            {% assign retailer_alt = retailer.name | default: '' | escape %}
            <div class="aspect-[4/2] w-full overflow-hidden rounded-2xl ">
              {{
                retailer.logo
                | image_url: width: 400, height: 320, crop: 'center'
                | image_tag: class: 'h-full w-full object-contain', alt: retailer_alt, loading: 'lazy'
              }}
            </div>
          {% else %}
            <div class="h-32 w-full rounded-2xl bg-slate-100"></div>
          {% endif %}
          {% if retailer.name != blank %}
            <h3 class="mt-3 text-sm font-semibold text-slate-900 text-center">{{ retailer.name }}</h3>
          {% endif %}
          {% if retailer.desc != blank %}
            <p class="mt-1 text-xs text-slate-500 text-center">{{ retailer.desc }}</p>
          {% endif %}
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Retail locations",
  "tag": "section",
  "class": "retail-locations",
  "settings": [
    {
      "type": "text",
      "id": "custom_id",
      "label": "Section ID",
      "info": "Optional anchor ID for this block."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Description"
    },
    {
      "type": "checkbox",
      "id": "show_large_retailers",
      "label": "Show large retailers grid",
      "default": true
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "Sales link label",
      "default": "Visit retailer"
    },
    {
      "type": "metaobject_list",
      "id": "retailers",
      "label": "Retailers",
      "metaobject_type": "retailers"
    }
  ],
  "presets": [
    {
      "name": "Retail locations"
    }
  ]
}
{% endschema %}
