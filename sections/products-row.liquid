{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign products = section.settings.products
  if products == blank
    assign products = collections.all.products
  endif
%}

<div class="products-row container relative">
  {% if section.settings.title != blank %}
    <div class="pb-12">
      <h2 class="text-4xl pb-1">{{ section.settings.title | escape }}</h2>
      {% if section.settings.description != blank %}
        <p class="text-secondary">{{ section.settings.description | escape }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="embla embla-products-row relative md:overflow-hidden" data-section-id="{{ section_id }}">
    <div class="embla__container flex">
      {% for product in products limit: 24 %}
        <div class="embla__slide">
          {% render 'product-card', product: product %}
        </div>
      {% endfor %}
    </div>
  </div>
  <button
    class="embla__prev absolute top-1/2 -translate-y-1/2 -mt-[16px] left-7 bg-white border border-neutral-100 shadow-xs hover:scale-95 flex items-center rounded-full z-2 size-8 pl-[3px] text-neutral-500 transition-all duration-200"
    aria-label="Previous product"
  >
    {{ 'icon-chevron-left.svg' | inline_asset_content }}
  </button>

  <button
    class="embla__next absolute top-1/2 -translate-y-1/2 -mt-[16px] right-7 bg-white border border-neutral-100 shadow-xs hover:scale-95 flex items-center rounded-full z-2 size-8 pl-[5px] text-neutral-500 transition-all duration-200"
    aria-label="Next product"
  >
    {{ 'icon-chevron-right.svg' | inline_asset_content }}
  </button>

  <!-- Progress Bar -->
  <div class="products-row__progress" aria-hidden="true">
    <div class="products-row__progress-bar"></div>
  </div>
</div>

{% javascript %}
  document.addEventListener('DOMContentLoaded', function () {
    const script = document.createElement('script');
    script.src = 'https://unpkg.com/embla-carousel/embla-carousel.umd.js';
    script.onload = function () {
      document.querySelectorAll('.embla-products-row').forEach(function (carouselElement) {
        function getSlidesToScroll() {
          const width = window.innerWidth;
          if (width < 768) return 1;
          if (width <= 1024) return 2;
          return 4;
        }

        const embla = EmblaCarousel(carouselElement, {
          loop: false,
          align: 'start',
          containScroll: 'trimSnaps',
          slidesToScroll: getSlidesToScroll(),
        });

        // Navigation buttons - scoped to carousel parent
        const carouselParent = carouselElement.closest('.products-row');
        const prevButton = carouselParent?.querySelector('.embla__prev');
        const nextButton = carouselParent?.querySelector('.embla__next');
        const progressBar = carouselParent?.querySelector('.products-row__progress-bar');

        // Update UI state
        function updateUI() {
          if (prevButton) prevButton.disabled = !embla.canScrollPrev();
          if (nextButton) nextButton.disabled = !embla.canScrollNext();
          if (progressBar) {
            const progress = Math.min(Math.max(embla.scrollProgress() * 100, 0), 100);
            progressBar.style.width = `${progress}%`;
          }
        }

        // Event listeners
        if (prevButton) prevButton.addEventListener('click', embla.scrollPrev);
        if (nextButton) nextButton.addEventListener('click', embla.scrollNext);
        embla.on('scroll', updateUI);

        // Handle resize
        let currentSlidesToScroll = getSlidesToScroll();
        let resizeTimer;
        window.addEventListener('resize', function () {
          clearTimeout(resizeTimer);
          resizeTimer = setTimeout(function () {
            const newSlidesToScroll = getSlidesToScroll();
            if (currentSlidesToScroll !== newSlidesToScroll) {
              currentSlidesToScroll = newSlidesToScroll;
              embla.reInit({ slidesToScroll: newSlidesToScroll });
              updateUI();
            }
          }, 250);
        });

        // Initial state
        updateUI();
      });
    };
    document.head.appendChild(script);
  });
{% endjavascript %}

{% stylesheet %}
  .products-row__section {
    /* background: linear-gradient(180deg, #fff 70%, rgba(255, 255, 255, 0.75) 100%),
      linear-gradient(161deg, #bfc5ff 53.19%, #b4d7ff 73.82%, #a8eaff 96.54%); */
    overflow: hidden;
  }

  .products-row {
    padding-top: 120px;
    padding-bottom: 200px;
  }

  .embla-products-row {
    position: relative;
  }

  .embla__container {
    display: flex;
    gap: 1.5rem;
  }

  .embla__slide {
    flex: 0 0 calc(25% - 1.5rem);
    min-width: 0;
  }

  .embla__slide .product-card {
    width: 100%;
    height: 100%;
  }

  /* Progress Bar Styles */
  .products-row__progress {
    width: 100%;
    height: 1px;
    background-color: var(--color-background-green, #000);
    border-radius: 1px;
    margin-top: 2rem;
    overflow: hidden;
  }

  .products-row__progress-bar {
    height: 100%;
    background: var(--color-foreground-green, #000);
    border-radius: 1px;
    width: 0%;
    min-width: 1px;
    transition: width 0.1s ease;
    transform-origin: left;
  }

  @media (max-width: 768px) {
    .products-row {
      padding-top: 120px;
      padding-bottom: 120px;
    }

    .products-row__carousel {
      margin: 0 -16px;
      padding: 0 16px;
    }

    .embla__slide {
      flex: 0 0 calc(90% - 0.5625rem);
      min-width: calc(90% - 0.5625rem);
    }

    .products-row .embla__prev,
    .products-row .embla__next {
      display: none;
    }

    .products-row__nav {
      display: none;
    }

    .products-row__progress {
      margin-top: 1.5rem;
    }
  }

  /* Tablet view - 2 columns */
  @media (min-width: 769px) and (max-width: 1024px) {
    .embla__slide {
      flex: 0 0 calc(50% - 0.375rem);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product",
  "class": "products-row__section",
  "tag": "section",
  "settings": [
    { "type": "text", "id": "title", "label": "Text", "default": "Featured products" },
    { "type": "text", "id": "description", "label": "Description", "default": "Discover our latest products" },
    { "type": "product_list", "id": "products", "label": "Product", "limit": 24 }
  ],
  "presets": [{ "name": "Product", "category": "Main" }]
}
{% endschema %}
