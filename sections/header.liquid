<header class="hidden md:block bg-white z-99 border-b border-black/8 h-16 ">
  {% content_for 'block',
    type: 'header-desktop-menu',
    id: 'header-desktop-menu',
    shop_menu: section.settings.shop_menu,
    marketing_menu: section.settings.marketing_menu,
    cosmetics_menu: section.settings.cosmetics_menu,
    supplements_menu: section.settings.supplements_menu
  %}
</header>

<header class="relative block md:hidden bg-white z-99 border-b border-black/8 h-16">
  {% content_for 'block',
    type: 'header-mobile-menu',
    id: 'header-mobile-menu',
    shop_menu: section.settings.shop_menu,
    marketing_menu: section.settings.marketing_menu
  %}
</header>

{% stylesheet %}
  .header-section {
    position: sticky;
    top: 0;
    z-index: 99;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Header",
  "class": "header-section",
  "settings": [
    {
      "type": "link_list",
      "id": "shop_menu",
      "label": "Shop menu"
    },
    {
      "type": "link_list",
      "id": "marketing_menu",
      "label": "Marketing menu"
    },
    {
      "type": "link_list",
      "id": "cosmetics_menu",
      "label": "Cosmetics mega menu"
    },
    {
      "type": "link_list",
      "id": "supplements_menu",
      "label": "Supplements mega menu"
    }
  ]
}
{% endschema %}
