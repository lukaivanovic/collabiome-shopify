{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign products_per_page = section.settings.products_per_page | default: 24

  # Priority: 1) Collection page context (preserves current functionality)
  #           2) Section setting collection (for use on other pages)
  #           3) Fallback to all products
  if section.settings.manual_collection != blank
    # On a collection page - use the page context (handles URL filters automatically)
    assign selected_collection = section.settings.manual_collection
  elsif collection != blank
    assign selected_collection = collection
  else
    # Fallback to all products
    assign selected_collection = collections.all
  endif

  # Define filter options for Kozmetika collection
  assign show_filters = false
  if selected_collection.handle == 'kozmetika' or selected_collection.handle == 'cosmetics'
    assign show_filters = true
  endif
%}

<div class="container mx-auto max-w-7xl px-4 py-8 md:py-16">
  {% comment %}
    Help banner for customers who don't know what to choose.
    Uses global settings from Theme Settings > Quiz Banner.
  {% endcomment %}
  {% if section.settings.show_quiz_banner %}
    {% render 'quiz-banner', variant: 'desktop' %}
  {% endif %}

  {% if section.settings.title != blank %}
    <div class="mb-6 text-left">
      <h1 class="text-5xl!">{{ selected_collection.title | default: 'Svi proizvodi' }}</h1>
      <p class="text-secondary mt-1">{{ selected_collection.description | default: 'Opis kolekcije' }}</p>
    </div>
  {% endif %}

  {% comment %} Collection chips and filters {% endcomment %}
  {% if section.settings.show_filters %}
    {% liquid
      assign chip_all_default_label = 'collections.all' | t | default: 'Shop all'
      assign chip_supplements_default_label = 'collections.supplements' | t | default: 'Dodaci prehrani'
      assign chip_cosmetics_default_label = 'collections.cosmetics' | t | default: 'Kozmetika'

      assign chip_all_label = settings.shop_all_chip_label_all | default: chip_all_default_label
      assign chip_supplements_label = settings.shop_all_chip_label_supplements | default: chip_supplements_default_label
      assign chip_cosmetics_label = settings.shop_all_chip_label_cosmetics | default: chip_cosmetics_default_label
    %}

    <div class="flex md:flex-row md:items-center items-start flex-col gap-2 mb-12 pb-4  flex-wrap">
      <div class="flex flex-wrap items-center gap-2">
        <a
          href="{{ routes.collections_url }}/all"
          class="collection-chip {% if selected_collection.handle == 'all' or selected_collection.handle == blank %}active{% endif %}"
        >
          {% if settings.shop_all_chip_icon_all != blank %}
            <img
              src="{{ settings.shop_all_chip_icon_all | image_url: width: 40, height: 40 }}"
              alt="{{ chip_all_label | escape }}"
              class="collection-chip__icon"
              loading="lazy"
              width="40"
              height="40"
            >
          {% endif %}
          <span class="collection-chip__label">
            {{ chip_all_label }}
          </span>
        </a>
        <a
          href="{{ routes.collections_url }}/dodaci-prehrani"
          class="collection-chip {% if selected_collection.handle == 'dodaci-prehrani' %}active{% endif %}"
        >
          {% if settings.shop_all_chip_icon_supplements != blank %}
            <img
              src="{{ settings.shop_all_chip_icon_supplements | image_url: width: 40, height: 40 }}"
              alt="{{ chip_supplements_label | escape }}"
              class="collection-chip__icon"
              loading="lazy"
            >
          {% endif %}
          <span class="collection-chip__label">
            {{ chip_supplements_label }}
          </span>
        </a>
        <a
          href="{{ routes.collections_url }}/kozmetika"
          class="collection-chip {% if selected_collection.handle == 'kozmetika' %}active{% endif %}"
        >
          {% if settings.shop_all_chip_icon_cosmetics != blank %}
            <img
              src="{{ settings.shop_all_chip_icon_cosmetics | image_url: width: 40, height: 40 }}"
              alt="{{ chip_cosmetics_label | escape }}"
              class="collection-chip__icon"
              loading="lazy"
              width="40"
              height="40"
            >
          {% endif %}
          <span class="collection-chip__label">
            {{ chip_cosmetics_label }}
          </span>
        </a>
      </div>

      {% comment %} Separator {% endcomment %}
      {% if show_filters and section.settings.show_filters %}
        <div class="md:w-px md:h-4 h-px w-full bg-neutral-200"></div>
      {% endif %}

      {% comment %} Filters {% endcomment %}
      {% if show_filters and section.settings.show_filters %}
        <div class="flex items-center">
          {% render 'facets' %}
        </div>
      {% endif %}
    </div>
  {% endif %}

  {% if selected_collection != blank %}
    {% comment %} Collection context - use pagination {% endcomment %}
    {% paginate selected_collection.products by products_per_page %}
      {% if selected_collection.products.size == 0 %}
        <div class="text-center py-12">
          <p class="text-lg opacity-75">
            {{ 'filters.no_products' | t | default: 'No products found with the selected filters.' }}
          </p>
          <a href="{{ selected_collection.url }}" class="inline-block mt-4 px-6 py-2 bg-black text-white rounded">
            {{ 'filters.clear_all' | t | default: 'Clear all filters' }}
          </a>
        </div>
      {% else %}
        <div
          class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6 mb-12"
          data-section-id="{{ section_id }}"
        >
          {% for product in selected_collection.products %}
            <div class="product-card">
              {% render 'product-card', product: product, hide_buy_form: false, cardStyle: true %}
            </div>
          {% endfor %}
        </div>

        {% if paginate.pages > 1 %}
          <nav class="pagination" role="navigation" aria-label="Pagination">
            <div class="pagination__container">
              {% if paginate.previous %}
                <a
                  href="{{ paginate.previous.url }}"
                  class="pagination__link pagination__link--prev"
                  aria-label="Previous page"
                >
                  <svg
                    class="pagination__icon"
                    width="16"
                    height="16"
                    viewBox="0 0 16 16"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>Previous</span>
                </a>
              {% else %}
                <span class="pagination__link pagination__link--prev pagination__link--disabled" aria-disabled="true">
                  <svg
                    class="pagination__icon"
                    width="16"
                    height="16"
                    viewBox="0 0 16 16"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>Previous</span>
                </span>
              {% endif %}

              <div class="pagination__pages">
                {% for part in paginate.parts %}
                  {% if part.is_link %}
                    <a href="{{ part.url }}" class="pagination__page">{{ part.title }}</a>
                  {% elsif part.title == paginate.current_page %}
                    <span class="pagination__page pagination__page--active" aria-current="page">{{ part.title }}</span>
                  {% else %}
                    <span class="pagination__page pagination__page--ellipsis">{{ part.title }}</span>
                  {% endif %}
                {% endfor %}
              </div>

              {% if paginate.next %}
                <a
                  href="{{ paginate.next.url }}"
                  class="pagination__link pagination__link--next"
                  aria-label="Next page"
                >
                  <span>Next</span>
                  <svg
                    class="pagination__icon"
                    width="16"
                    height="16"
                    viewBox="0 0 16 16"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              {% else %}
                <span class="pagination__link pagination__link--next pagination__link--disabled" aria-disabled="true">
                  <span>Next</span>
                  <svg
                    class="pagination__icon"
                    width="16"
                    height="16"
                    viewBox="0 0 16 16"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </span>
              {% endif %}
            </div>
          </nav>
        {% endif %}
      {% endif %}
    {% endpaginate %}
  {% else %}
    {% comment %} Fallback - no collection available {% endcomment %}
    <div class="text-center py-12">
      <p class="text-lg opacity-75">No products available.</p>
    </div>
  {% endif %}
</div>

{% stylesheet %}
  /* Collection chips */
  .collection-chip {
    height: 2rem;
    padding: 0 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    border-radius: 9999px;
    text-decoration: none;
    color: #111827;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .collection-chip:hover {
    background: #f3f4f6;
  }

  .collection-chip.active {
    background: #111827;
    color: #ffffff;
    border-color: #111827;
  }

  .collection-chip__icon {
    width: 20px;
    height: 20px;
    border-radius: 9999px;
    object-fit: cover;
    flex-shrink: 0;
  }

  .collection-chip__label {
    white-space: nowrap;
  }

  /* Pagination */
  .pagination {
    margin-top: 3rem;
    padding-top: 2rem;
  }

  .pagination__container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .pagination__link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    text-decoration: none;
    color: #000;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
    background: transparent;
    border: 1px solid transparent;
  }

  .pagination__link:hover:not(.pagination__link--disabled) {
    background: rgba(0, 0, 0, 0.05);
  }

  .pagination__link--disabled {
    opacity: 0.4;
    cursor: not-allowed;
    color: #666;
  }

  .pagination__icon {
    flex-shrink: 0;
  }

  .pagination__pages {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .pagination__page {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 2.5rem;
    height: 2.5rem;
    padding: 0 0.75rem;
    border-radius: 0.375rem;
    text-decoration: none;
    color: #000;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
    background: transparent;
    border: 1px solid transparent;
  }

  .pagination__page:hover:not(.pagination__page--active):not(.pagination__page--ellipsis) {
    background: rgba(0, 0, 0, 0.05);
  }

  .pagination__page--active {
    background: #000;
    color: #fff;
    border-color: #000;
    cursor: default;
  }

  .pagination__page--ellipsis {
    color: #666;
    cursor: default;
    pointer-events: none;
  }

  @media (max-width: 640px) {
    .pagination__link span {
      display: none;
    }

    .pagination__link {
      padding: 0.5rem;
    }

    .pagination__page {
      min-width: 2.25rem;
      height: 2.25rem;
      padding: 0 0.5rem;
      font-size: 0.8125rem;
    }
  }
{% endstylesheet %}

<script src="{{ 'facet-select.js' | asset_url }}" defer></script>
<script src="{{ 'facets.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Shop All",
  "class": "shop-all__section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "Shop All Products"
    },
    {
      "type": "collection",
      "id": "manual_collection",
      "label": "Collection",
      "info": "Select a collection to display. Leave empty to show all products."
    },
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 4,
      "max": 48,
      "step": 4,
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "show_filters",
      "label": "Show filters",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_quiz_banner",
      "label": "Show quiz banner",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Shop All",
      "category": "Collection"
    }
  ]
}
{% endschema %}
