{% liquid
  assign section_id = section.settings.custom_id | default: section.id

  # Priority: 1) Collection page context (preserves current functionality)
  #           2) Section setting collection (for use on other pages)
  #           3) Fallback to all products
  if section.settings.manual_collection != blank
    # On a collection page - use the page context (handles URL filters automatically)
    assign selected_collection = section.settings.manual_collection
  elsif collection != blank
    assign selected_collection = collection
  else
    # Fallback to all products
    assign selected_collection = collections.all
  endif

  # Define filter options for Kozmetika and Paketi collections
  assign show_filters = false
  if selected_collection.handle == 'kozmetika' or selected_collection.handle == 'cosmetics' or selected_collection.handle == 'paketi' or selected_collection.handle == 'bundles'
    assign show_filters = true
  endif

  # Split layout by bundle metafield for non-bundle categories (not paketi/bundles)
  assign is_bundle_collection = false
  if selected_collection.handle == 'paketi' or selected_collection.handle == 'bundles'
    assign is_bundle_collection = true
  endif
%}

<div class="container mx-auto max-w-7xl px-4 py-8">
  {% comment %}
    Help banner for customers who don't know what to choose.
    Uses global settings from Theme Settings > Quiz Banner.
  {% endcomment %}
  {% comment %}
    {% if section.settings.show_quiz_banner %}
      {% render 'quiz-banner', variant: 'desktop' %}
    {% endif %}
  {% endcomment %}

  {% if section.settings.title != blank %}
    <div class="mb-6 text-center hidden">
      <h1 class="text-xl!">{{ selected_collection.title | default: 'Svi proizvodi' }}</h1>
      <p class="text-secondary mt-1">{{ selected_collection.description | default: 'Opis kolekcije' }}</p>
    </div>
  {% endif %}

  {% comment %} Collection chips and filters {% endcomment %}
  {% if section.settings.show_filters %}
    {% liquid
      assign chip_all_default_label = 'collections.all' | t | default: 'Svi proizvodi'
      assign chip_supplements_default_label = 'collections.supplements' | t | default: 'Dodaci prehrani'
      assign chip_cosmetics_default_label = 'collections.cosmetics' | t | default: 'Kozmetika'
      assign chip_bundles_default_label = 'collections.bundles' | t | default: 'Paketi'

      assign chip_all_label = settings.shop_all_chip_label_all | default: chip_all_default_label
      assign chip_supplements_label = settings.shop_all_chip_label_supplements | default: chip_supplements_default_label
      assign chip_cosmetics_label = settings.shop_all_chip_label_cosmetics | default: chip_cosmetics_default_label
      assign chip_bundles_label = settings.shop_all_chip_label_bundles | default: chip_bundles_default_label
    %}

    <div class="flex md:flex-col md:items-center items-start flex-col gap-2 mb-12 pb-4  flex-wrap">
      <div class="flex flex-wrap items-center gap-2">
        <a
          href="{{ routes.collections_url }}/all"
          class="collection-chip font-medium {% if selected_collection.handle == 'all' or selected_collection.handle == blank %}active{% endif %}"
        >
          {% if settings.shop_all_chip_icon_all != blank %}
            <img
              src="{{ settings.shop_all_chip_icon_all | image_url: width: 40, height: 40 }}"
              alt="{{ chip_all_label | escape }}"
              class="collection-chip__icon"
              loading="lazy"
              width="40"
              height="40"
            >
          {% endif %}
          <span class="collection-chip__label">
            {{ chip_all_label }}
          </span>
        </a>
        <a
          href="{{ routes.collections_url }}/dodaci-prehrani"
          class="collection-chip font-medium {% if selected_collection.handle == 'dodaci-prehrani' %}active{% endif %}"
        >
          {% if settings.shop_all_chip_icon_supplements != blank %}
            <img
              src="{{ settings.shop_all_chip_icon_supplements | image_url: width: 40, height: 40 }}"
              alt="{{ chip_supplements_label | escape }}"
              class="collection-chip__icon"
              loading="lazy"
              width="40"
              height="40"
            >
          {% endif %}
          <span class="collection-chip__label">
            {{ chip_supplements_label }}
          </span>
        </a>
        <a
          href="{{ routes.collections_url }}/kozmetika"
          class="collection-chip font-medium {% if selected_collection.handle == 'kozmetika' %}active{% endif %}"
        >
          {% if settings.shop_all_chip_icon_cosmetics != blank %}
            <img
              src="{{ settings.shop_all_chip_icon_cosmetics | image_url: width: 40, height: 40 }}"
              alt="{{ chip_cosmetics_label | escape }}"
              class="collection-chip__icon"
              loading="lazy"
              width="40"
              height="40"
            >
          {% endif %}
          <span class="collection-chip__label">
            {{ chip_cosmetics_label }}
          </span>
        </a>
        <a
          href="{{ routes.collections_url }}/paketi"
          class="collection-chip font-medium {% if selected_collection.handle == 'paketi' %}active{% endif %}"
        >
          {% if settings.shop_all_chip_icon_bundles != blank %}
            <img
              src="{{ settings.shop_all_chip_icon_bundles | image_url: width: 40, height: 40 }}"
              alt="{{ chip_bundles_label | escape }}"
              class="collection-chip__icon"
              loading="lazy"
              width="40"
              height="40"
            >
          {% endif %}
          <span class="collection-chip__label">
            {{ chip_bundles_label }}
          </span>
        </a>
      </div>

      {% comment %} Collection title {% endcomment %}
      <h1 class="text-2xl md:text-3xl! font-semibold mb-2 text-center mt-8">
        {% if selected_collection.handle == 'all' or selected_collection.handle == blank %}
          Svi proizvodi
        {% else %}
          {{ selected_collection.title }}
        {% endif %}
      </h1>

      {% comment %} Filters {% endcomment %}
      {% if show_filters and section.settings.show_filters %}
        <div class="flex items-center">
          {% render 'facets' %}
        </div>
      {% endif %}
    </div>
  {% endif %}

  {% if selected_collection != blank %}
    {% if selected_collection.products.size == 0 %}
      <div class="text-center py-12">
        <p class="text-lg opacity-75">
          {{ 'filters.no_products' | t | default: 'Nisu pronađeni proizvodi s odabranim filtrima.' }}
        </p>
        <a href="{{ selected_collection.url }}" class="inline-block mt-4 px-6 py-2 bg-black text-white rounded">
          {{ 'filters.clear_all' | t | default: 'Očisti sve filtre' }}
        </a>
      </div>
    {% else %}
      {% if is_bundle_collection %}
        {% comment %} Paketi: jedinstvena mreža svih proizvoda {% endcomment %}
        <div
          class="grid grid-cols-1 md:grid-cols-4 gap-4 sm:gap-6 mb-12"
          data-section-id="{{ section_id }}"
        >
          {% for product in selected_collection.products %}
            <div class="product-card">
              {% render 'product-card', product: product, hide_buy_form: false, cardStyle: true %}
            </div>
          {% endfor %}
        </div>
      {% else %}
        {% comment %} Non-bundle categories: first list = is_a_bundle false, second list = is_a_bundle true {% endcomment %}
        <div
          class="grid grid-cols-1 md:grid-cols-4 gap-4 sm:gap-6 mb-12"
          data-section-id="{{ section_id }}"
        >
          {% for product in selected_collection.products %}
            {% assign is_a_bundle = product.metafields.custom.is_a_bundle.value %}
            {% if is_a_bundle != true and is_a_bundle != 'true' %}
              <div class="product-card">
                {% render 'product-card', product: product, hide_buy_form: false, cardStyle: true %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
        {% comment %} Collection title {% endcomment %}
        <h1 class="text-2xl md:text-3xl! font-semibold mb-8 text-center mt-8">Paketi</h1>
        <div
          class="grid grid-cols-1 md:grid-cols-4 gap-4 sm:gap-6 mb-12"
          data-section-id="{{ section_id }}"
        >
          {% for product in selected_collection.products %}
            {% assign is_a_bundle = product.metafields.custom.is_a_bundle.value %}
            {% if is_a_bundle == true or is_a_bundle == 'true' %}
              <div class="product-card">
                {% render 'product-card', product: product, hide_buy_form: false, cardStyle: true %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    {% endif %}
  {% else %}
    {% comment %} Fallback - no collection available {% endcomment %}
    <div class="text-center py-12">
      <p class="text-lg opacity-75">Nema dostupnih proizvoda.</p>
    </div>
  {% endif %}
</div>

{% stylesheet %}
  /* Collection chips */
  .collection-chip {
    height: 44px;
    padding-left: 16px;
    padding-right: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    border-radius: 9999px;
    text-decoration: none;
    color: #111827;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    transition: all 0.2s;
  }

  .collection-chip:hover {
    background: #f3f4f6;
  }

  .collection-chip.active {
    background: #fff;
    color: #000;
    border-color: #000;
  }

  .collection-chip__icon {
    width: 24px;
    height: 24px;
    border-radius: 9999px;
    object-fit: cover;
    flex-shrink: 0;
  }

  .collection-chip__label {
    white-space: nowrap;
  }

{% endstylesheet %}

<script src="{{ 'facet-select.js' | asset_url }}" defer></script>
<script src="{{ 'facets.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Shop All",
  "class": "shop-all__section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "Svi proizvodi"
    },
    {
      "type": "collection",
      "id": "manual_collection",
      "label": "Collection",
      "info": "Select a collection to display. Leave empty to show all products."
    },
    {
      "type": "checkbox",
      "id": "show_filters",
      "label": "Show filters",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_quiz_banner",
      "label": "Show quiz banner",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Shop All",
      "category": "Collection"
    }
  ]
}
{% endschema %}
