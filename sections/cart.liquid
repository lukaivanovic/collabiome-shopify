{% liquid
  assign section_title = section.settings.title | default: 'Your cart'
  assign section_description = section.settings.description | default: ''
%}

<section class="py-16">
  <div class="container mx-auto px-4">
    <div class="mx-auto max-w-4xl space-y-10">
      <div class="space-y-4 text-center sm:text-left">
        <h1 class="text-3xl font-semibold text-neutral-900">{{ section_title | escape }}</h1>
        {% if section_description != blank %}
          <p class="text-base text-neutral-600">{{ section_description | escape }}</p>
        {% endif %}
      </div>

      {% if cart == empty %}
        {% render 'cart-drawer-empty' %}
      {% else %}
        <form
          action="{{ routes.cart_url }}"
          method="post"
          id="CartPage-Form"
          class="space-y-8"
        >
          <div class="space-y-6 rounded-3xl border border-neutral-200 bg-white p-6 shadow-sm">
            <div class="flex items-center justify-between">
              <p class="text-sm font-medium uppercase tracking-wide text-neutral-500">Cart summary</p>
              <span class="text-sm text-neutral-500">
                {{ cart.item_count }}
                {% if cart.item_count == 1 %}item{% else %}items{% endif %}
              </span>
            </div>
            <div class="space-y-6">
              {% for item in cart.items %}
                {% render 'cart-drawer-item', item: item %}
              {% endfor %}
            </div>
          </div>

          <div class="space-y-6 rounded-3xl border border-neutral-200 bg-white p-6 shadow-sm">
            <div class="flex items-center justify-between">
              <span class="text-lg font-medium text-neutral-900">Estimated total</span>
              <span class="text-lg font-semibold text-neutral-900">{{ cart.total_price | money_with_currency }}</span>
            </div>
            {% if cart.cart_level_discount_applications.size > 0 %}
              <ul class="space-y-2 text-sm text-green-600" role="list" aria-label="Discounts">
                {% for discount in cart.cart_level_discount_applications %}
                  <li class="flex items-center gap-2">
                    <span class="inline-flex h-5 w-5 items-center justify-center rounded-full bg-green-100 text-green-700">
                      {{- 'icon-check.svg' | inline_asset_content -}}
                    </span>
                    {{ discount.title | escape }} (-{{ discount.total_allocated_amount | money }})
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
            <p class="text-sm text-neutral-500">Taxes, discounts, and shipping are calculated at checkout.</p>
            <div class="flex flex-wrap gap-3">
              <button
                type="submit"
                name="update"
                class="inline-flex h-12 items-center justify-center rounded-full border border-neutral-900 px-6 text-sm font-medium uppercase tracking-wide text-neutral-900 transition hover:bg-neutral-900 hover:text-white"
              >
                Update cart
              </button>
              <button
                type="submit"
                name="checkout"
                class="inline-flex h-12 flex-1 basis-48 items-center justify-center rounded-full bg-neutral-900 px-6 text-sm font-medium uppercase tracking-wide text-white transition hover:bg-neutral-800"
              >
                Check out
              </button>
              <a
                href="{{ routes.all_products_collection_url }}"
                class="inline-flex h-12 items-center justify-center rounded-full border border-transparent px-6 text-sm font-medium uppercase tracking-wide text-neutral-600 transition hover:text-neutral-900"
              >
                Continue shopping
              </a>
            </div>
          </div>
        </form>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Cart",
  "tag": "section",
  "class": "cart-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Your cart"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Review your items before checking out."
    }
  ],
  "presets": [
    {
      "name": "Cart"
    }
  ]
}
{% endschema %}
