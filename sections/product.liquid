{% comment %}
  This section is used in the product template to render product page with
  media, content, and add-to-cart form.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/product
{% endcomment %}

{%- liquid
  if section.settings.manual_product != blank
    assign selected_product = section.settings.manual_product
  else
    assign selected_product = product
  endif

  assign benefits = selected_product.metafields.custom.benefits.value
  assign accordion_items = selected_product.metafields.custom.accordion.value
  assign headline = selected_product.metafields.custom.headline.value
  assign product_form_identifier = 'product-form-' | append: selected_product.id
  assign product_collection = selected_product.collections.first
  assign unique_selling_points = selected_product.metafields.custom.unique_selling_points.value
-%}

<div class="product-background">
  <div class="w-full container !px-0 md:!px-6 pt-6 md:pb-30 grid gap-5 lg:[grid-template-columns:1fr_1fr]">
    <script id="product-data" type="application/json">
      {{ selected_product | json }}
    </script>

    {% comment %} Product images {% endcomment %}
    <div class="flex flex-col md:items-center gap-3 px-4 md:px-0 w-full overflow-x-hidden max-h-[700px] lg:sticky lg:top-20">
      <div class="overflow-hidden relative rounded-2xl w-full flex-grow">
        <div
          class="embla embla-product flex overflow-hidden relative h-full"
          data-product-id="{{ selected_product.id }}"
        >
          <div class="flex bg-white">
            {% for image in selected_product.images %}
              <div class="embla__slide">
                {%
                  render 'image',
                  image: image,
                  alt: image.alt | default: product.title | append: ' - Slika ' | append: forloop.index
                %}
              </div>
            {% endfor %}
          </div>

          <div class="absolute bottom-2 right-2">
            <button
              class="embla__prev [background:var(--product-accent)] rounded-full z-2 p-1 text-product-accent-foreground"
              aria-label="Prethodna slika"
            >
              {{ 'icon-chevron-left.svg' | inline_asset_content }}
            </button>

            <button
              class="embla__next [background:var(--product-accent)] rounded-full z-2 p-1 text-product-accent-foreground"
              aria-label="Sljedeća slika"
            >
              {{ 'icon-chevron-right.svg' | inline_asset_content }}
            </button>
          </div>
        </div>
      </div>

      {%- if selected_product.images.size > 1 -%}
        <div class="embla-thumbs flex gap-2 overflow-x-auto flex-nowrap flex-shrink-0 w-full">
          {%- for image in selected_product.images -%}
            <button
              class="embla-thumbs__slide flex-shrink-0 w-20 h-20 rounded-lg overflow-hidden border-2! border-transparent! bg-white opacity-90 hover:opacity-100 transition-all data-[active=true]:border-[var(--product-accent)]! data-[active=true]:opacity-100"
              type="button"
              aria-label="Prikaži sliku {{ forloop.index }}"
              data-active="false"
            >
              {%
                render 'image',
                image: image,
                alt: image.alt | default: product.title | append: ' - Minijatura ' | append: forloop.index
              %}
            </button>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>

    {% comment %} Product content {% endcomment %}
    <div class="flex flex-col gap-10 bg-white rounded-t-3xl px-6 pb-6 pt-12 md:p-12 md:rounded-3xl">
      <div class="flex flex-col">
        {% comment %} Breadcrumbs {% endcomment %}
        <nav class="mb-4" aria-label="Krušne mrvice">
          <ol class="flex items-center gap-2 text-sm text-neutral-600">
            <li>
              <a href="{{ routes.root_url }}" class="hover:text-[var(--product-accent)] transition-colors">Naslovna</a>
            </li>
            <li class="text-neutral-400">></li>
            <li>
              <a href="{{ product_collection.url }}" class="hover:text-[var(--product-accent)] transition-colors">
                {{- product_collection.title -}}
              </a>
            </li>
          </ol>
        </nav>
        <h1 class="text-5xl! text-balance max-w-140 mb-3">{{ selected_product.title }}</h1>
        <!-- Start of Judge.me code -->
        <div class="jdgm-widget jdgm-preview-badge mb-3" data-id="{{ selected_product.id }}">
          {{ selected_product.metafields.judgeme.badge }}
        </div>
        <!-- End of Judge.me code -->
        <p class=" font-medium">{{ headline }}</p>
      </div>

      {% comment %} Buy form and information points {% endcomment %}
      <div class="flex flex-col gap-2">
        {% render 'product-buy-form',
          product: selected_product,
          section_id: section.id,
          product_form_id: product_form_identifier,
          show_dynamic_checkout: false,
          gift_card_recipient_feature_active: false,
          quantity_rule_soldout: false,
          button_variant: 'default',
          free_delivery_threshold: 5000,
          variant_selector_type: 'horizontal'
        %}

        <div class="flex flex-col gap-3 items-center mt-3">
          <div class="flex items-center gap-3">
            <span class="text-neutral-400 flex-shrink-0">
              {{- 'icon-package.svg' | inline_asset_content -}}
            </span>
            <span class="text-sm font-medium text-neutral-500">Besplatna dostava iznad €50</span>
          </div>
          <div class="flex items-center gap-3">
            <span class="text-neutral-400 flex-shrink-0">
              {{- 'icon-medal.svg' | inline_asset_content -}}
            </span>
            <span class="text-sm font-medium text-neutral-500">Povrat novca do 60 dana</span>
          </div>
        </div>
      </div>

      {% comment %} Unique selling points {% endcomment %}
      {% if unique_selling_points != blank %}
        <div class="flex flex-row flex-wrap justify-center gap-y-10">
          {%- for unique_selling_point in unique_selling_points -%}
            {%- liquid
              assign usp_icon_raw = unique_selling_point.icon | default: ''
              assign usp_icon_key = usp_icon_raw | downcase | strip | replace: '.svg', '' | replace: 'icon-', ''
            -%}
            <div class="flex flex-col text-center items-center gap-3 bg-white rounded-lg w-1/2 md:w-1/4 text-product-accent">
              {% case usp_icon_key %}
                {% when 'apothecary-filter' %}
                  {% render 'icon-apothecary-filter' %}
                {% when 'herb' %}
                  {% render 'icon-herb' %}
                {% when 'spf' %}
                  {% render 'icon-spf' %}
                {% when 'microscope' %}
                  {% render 'icon-microscope' %}
                {% when 'ferment-jar' %}
                  {% render 'icon-ferment-jar' %}
                {% when 'croatia' %}
                  {% render 'icon-croatia' %}
                {% else %}
                  {{ 'icon-check.svg' | inline_asset_content }}
              {% endcase %}
              <span class="font-medium text-xs max-w-32">
                {{- unique_selling_point.usp | default: 'Jedinstvena prednost' | strip -}}
              </span>
            </div>
          {%- endfor -%}
        </div>
      {% endif %}

      {% comment %} Description {% endcomment %}
      {% if selected_product.description != blank %}
        <div class="flex flex-col gap-3">
          <span class="text-xs font-medium uppercase text-neutral-500 tracking-widest">Opis</span>
          <div class="flex flex-col">
            {% if selected_product.description != blank %}
              <div class="leading-[1.6] text-black font-medium gap-4 flex flex-col line-clamp-5">
                {{ selected_product.description }}
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}

      {% comment %} Benefits {% endcomment %}
      {% if benefits != blank %}
        <div class="flex flex-col gap-4">
          <span class="text-xs font-semibold uppercase text-neutral-500 tracking-wider">Prednosti</span>
          <div class="flex flex-col gap-2">
            {%- for benefit in benefits -%}
              <div class="flex items-center gap-3 bg-white rounded-lg">
                <span class="text-[var(--product-accent)]">{{ 'icon-check.svg' | inline_asset_content }}</span>
                <span class="font-medium">{{ benefit | default: 'Prednost' | strip }}</span>
              </div>
            {%- endfor -%}
          </div>
        </div>
      {% endif %}

      {% comment %} Accordions {% endcomment %}
      {% if accordion_items != blank %}
        <div class="flex flex-col gap-4">
          <span class="text-xs font-medium uppercase text-neutral-500 tracking-widest">Dodatne informacije</span>
          <div class="product-accordion flex flex-col">
            {%- for accordion_item in accordion_items -%}
              <collapsible-item class="accordion-item border-b border-neutral-100 bg-white transition-colors">
                <button
                  class="accordion-trigger w-full flex items-center justify-between py-3 text-left "
                  data-collapsible-trigger
                  type="button"
                >
                  <span class=" text-black font-medium">
                    {{- accordion_item.title | strip -}}
                  </span>
                  <div class="w-6 h-6 flex items-center justify-center [background:var(--product-background)] rounded-full text-[var(--product-accent)]">
                    {{ 'icon-plus.svg' | inline_asset_content }}
                  </div>
                </button>
                <div class="accordion-content" data-collapsible-content>
                  <div class="pt-3 pb-8 leading-[1.6] text-black gap-4 flex flex-col">
                    {{ accordion_item.content | metafield_tag }}
                  </div>
                </div>
              </collapsible-item>
            {%- endfor -%}
          </div>
        </div>
      {% endif %}

      {% comment %} <div data-rebuy-id="247488" data-rebuy-shopify-product-ids="{{ selected_product.id }}"></div> {% endcomment %}

      <script src="{{ 'collapsible.js' | asset_url }}" defer></script>
    </div>
  </div>
</div>

{%- comment -%} BreadcrumbList structured data {%- endcomment -%}
