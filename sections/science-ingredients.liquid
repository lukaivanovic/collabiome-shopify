{% liquid
  assign section_id = section.settings.custom_id | default: section.id
%}

<section
  id="{{ section_id }}"
  class="relative"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background: linear-gradient(to bottom,  transparent, var(--product-bg-secondary));
  "
>
  <div class="container mx-auto px-4">
    <div class="flex flex-col gap-10">
      {%- comment -%} First Heading & Description {%- endcomment -%}
      <div class="container-small mx-auto max-w-4xl text-center">
        {% if section.settings.title != blank %}
          <h2 class="title-medium">{{ section.settings.title | escape }}</h2>
        {% endif %}
        {% if section.settings.description != blank %}
          <p class="text-base opacity-70 mt-2">{{ section.settings.description }}</p>
        {% endif %}
      </div>

      {%- comment -%} First Block List for Ingredients {%- endcomment -%}
      {% assign first_ingredients = section.blocks | where: 'type', 'ingredient' %}
      {% if first_ingredients.size > 0 %}
        <div class="flex flex-row flex-wrap items-center justify-center">
          {% for block in first_ingredients %}
            <div
              class="w-full md:w-1/3 px-3"
              {{ block.shopify_attributes }}
            >
              <div class="flex flex-row md:flex-col">
                {% if block.settings.image != blank %}
                  <div class="shrink-0 w-24 h-24 md:w-full md:h-auto md:aspect-square">
                    {% render 'image', image: block.settings.image, class: 'w-full h-full object-cover' %}
                  </div>
                {% endif %}
                <div class="text-left md:text-center py-4">
                  {% if block.settings.title != blank %}
                    <h3 class="text-lg font-medium">{{ block.settings.title | escape }}</h3>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <p class="text-sm text-secondary">{{ block.settings.description }}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}

      {%- comment -%} Second Heading & Description {%- endcomment -%}
      {% if section.settings.title_2 != blank or section.settings.description_2 != blank %}
        <div class="container-small mx-auto max-w-4xl text-center">
          {% if section.settings.title_2 != blank %}
            <h2 class="title-medium">{{ section.settings.title_2 | escape }}</h2>
          {% endif %}
          {% if section.settings.description_2 != blank %}
            <p class="text-base opacity-70 mt-2">{{ section.settings.description_2 }}</p>
          {% endif %}
        </div>
      {% endif %}

      {%- comment -%} Second Block List for Ingredients {%- endcomment -%}
      {% assign second_ingredients = section.blocks | where: 'type', 'ingredient_2' %}
      {% if second_ingredients.size > 0 %}
        <div class="flex flex-row flex-wrap items-center">
          {% for block in second_ingredients %}
            <div
              class="w-full md:w-1/3 px-2 md:px-4 flex flex-row items-center md:flex-col gap-y-2 gap-x-4 md:items-stretch bg-white rounded-2xl overflow-hidden"
              {{ block.shopify_attributes }}
            >
              {% if block.settings.image != blank %}
                <div class="shrink-0 w-24 h-24 md:w-full md:h-auto md:aspect-square">
                  {% render 'image', image: block.settings.image, class: 'w-full h-full object-cover' %}
                </div>
              {% endif %}
              <div class="text-left md:text-center py-4">
                {% if block.settings.title != blank %}
                  <h3 class="text-lg font-medium">{{ block.settings.title | escape }}</h3>
                {% endif %}
                {% if block.settings.description != blank %}
                  <p class="text-sm text-secondary">{{ block.settings.description }}</p>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Science Ingredients",
  "tag": "section",
  "class": "section-science-ingredients",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 60
    },
    {
      "type": "header",
      "content": "First Section"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Key Ingredients"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover the powerful ingredients in our products"
    },
    {
      "type": "header",
      "content": "Second Section"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Heading 2",
      "default": "Additional Ingredients"
    },
    {
      "type": "textarea",
      "id": "description_2",
      "label": "Description 2",
      "default": "More ingredients that make a difference"
    }
  ],
  "max_blocks": 20,
  "blocks": [
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    },
    {
      "type": "ingredient_2",
      "name": "Ingredient (Second Group)",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Science Ingredients",
      "category": "Generic"
    }
  ]
}
{% endschema %}
